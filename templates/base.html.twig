        <link rel="stylesheet" href="{{ asset('css/base.css') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <!-- Début Header : barre de navigation et logo-->
        <header>
            <nav id="menu" class="side-spaced">
                <div class="f-3">
                    <p class="police_logo"><strong>La Perle Bleue</strong></p>
                </div>
                <div id="menu-links">
                    <a class="nav_link mr" href="{{ path('accueil')}}">Accueil</a>
                    <a class="nav_link mr" href="{{ path('menu')}}">Menu</a>
                    <a class="nav_link mr" href="{{ path('contact')}}">Contact</a>
                    <a class="nav_link ubereat mr" target="_blank" href="https://www.ubereats.com/fr/store/la-perle-bleue/p2uKdKaZViePwyIxl6_CxQ?diningMode=DELIVERY&pl=JTdCJTIyYWRkcmVzcyUyMiUzQSUyMjI1JTIwUnVlJTIwZGUlMjBQbG9ic2hlaW0lMjIlMkMlMjJyZWZlcmVuY2UlMjIlM0ElMjJDaElKdzAwWElCREpsa2NSR2NMbmphNzMtdWslMjIlMkMlMjJyZWZlcmVuY2VUeXBlJTIyJTNBJTIyZ29vZ2xlX3BsYWNlcyUyMiUyQyUyMmxhdGl0dWRlJTIyJTNBNDguNTY2NTA3OSUyQyUyMmxvbmdpdHVkZSUyMiUzQTcuNzY3NTg4JTdE&ps=1">UberEats</a>
                    {% if is_granted('ROLE_USER') %} 
                    <a class="nav_link mr" href="{{ path('admin')}}">Admin</a>
                    {% endif %}
                </div>
                <div id="burger">
                    <i class="fas fa-bars"></i>
                </div>
            </nav>
        </header>
         <!-- Fin Header-->
        {% block body %}{% endblock %}

        <footer class="footer-distributed">

            <div class="footer-left">

                <h3 class="police_logo"><strong>La Perle Bleue</strong></h3>

                <p class="footer-links">
                    <a href="{{ path('accueil')}}" class="link-1">Accueil</a>
                    
                    <a href="#">Menu</a>
                
                    <a href="{{ path('contact')}}">Contact</a>
                
                    <a href="https://www.ubereats.com/fr/store/la-perle-bleue/p2uKdKaZViePwyIxl6_CxQ?diningMode=DELIVERY&pl=JTdCJTIyYWRkcmVzcyUyMiUzQSUyMjI1JTIwUnVlJTIwZGUlMjBQbG9ic2hlaW0lMjIlMkMlMjJyZWZlcmVuY2UlMjIlM0ElMjJDaElKdzAwWElCREpsa2NSR2NMbmphNzMtdWslMjIlMkMlMjJyZWZlcmVuY2VUeXBlJTIyJTNBJTIyZ29vZ2xlX3BsYWNlcyUyMiUyQyUyMmxhdGl0dWRlJTIyJTNBNDguNTY2NTA3OSUyQyUyMmxvbmdpdHVkZSUyMiUzQTcuNzY3NTg4JTdE&ps=1">UberEats</a>
                    
                </p>

                <p class="footer-company-name white">Mentions légales © 2022</p>
            </div>

            <div class="footer-center">

                <div>
                    <i class="fa fa-map-marker"></i>
                    <p><strong><span>1 Rue du Hoelzel,</span> 67400 Illkirch-Graffenstaden</strong></p>
                </div>

                <div>
                    <i class="fa fa-phone"></i>
                    {% for text in textes %}
                        {% if text.nom == 'telephone' %}
                            <p>{{text.texte}}</p>
                        {% endif %}
                    {% endfor %}
                    
                </div>

                <div>
                    <i class="fa fa-envelope"></i>
                    {% for text in textes %}
                        {% if text.nom == 'email' %}
                            <p>{{text.texte}}</p>
                        {% endif %}
                    {% endfor %}
                </div>

            </div>

            <div class="footer-right">

                <p class="footer-company-about">
                    <span>À propos</span>
                    {% for text in textes %}
                        {% if text.nom == 'A_propos' %}
                            {{text.texte}}
                        {% endif %}
                    {% endfor %}

                </p>

                <div class="footer-icons">
                    <a href="https://www.facebook.com/la.perle.bleue.ilk/?ref=py_c"><i class="fab fa-facebook-f"></i></a>
                    <a href="https://www.instagram.com/la_perle_bleue_illkirch/?hl=fr"><i class="fab fa-instagram"></i></a>
                    <a href="https://www.ubereats.com/fr/store/la-perle-bleue/p2uKdKaZViePwyIxl6_CxQ?diningMode=DELIVERY&pl=JTdCJTIyYWRkcmVzcyUyMiUzQSUyMjI1JTIwUnVlJTIwZGUlMjBQbG9ic2hlaW0lMjIlMkMlMjJyZWZlcmVuY2UlMjIlM0ElMjJDaElKdzAwWElCREpsa2NSR2NMbmphNzMtdWslMjIlMkMlMjJyZWZlcmVuY2VUeXBlJTIyJTNBJTIyZ29vZ2xlX3BsYWNlcyUyMiUyQyUyMmxhdGl0dWRlJTIyJTNBNDguNTY2NTA3OSUyQyUyMmxvbmdpdHVkZSUyMiUzQTcuNzY3NTg4JTdE&ps=1"><img class="logo_uberEats" src="{{ asset('img/Upload/uberEats.png')}}" alt=""></a>
                </div>

            </div>

        </footer>
        <script src="{{ asset('js/burger.js')}}"></script>
    </body>
</html>
