{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}    
 
    <!-- Include Bootstrap CDN -->
    <link rel="stylesheet" href="{{ asset('css/timepicker.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" integrity="sha512-mSYUmp1HYZDFaVKK//63EcZq4iFWFjxSL+Z3T/aCt4IO9Cejm03q3NKKYN6pFQzY0SBOr8h+eCIAZHPXcpZaNw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <link rel="stylesheet" href="{{ asset('css/accueil.css') }}">
    
{% endblock %}

{% block body %}

        <main>
                {% for message in app.flashes('success') %}
                    <div class="flash_message alert alert-success">
                        <p class="m">{{ message }}</p>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
                <!-- Début Section Accueil : image et texte-->
                {% for message in app.flashes('error') %}
                    <div class="flash_message alert alert-danger red">
                        <p class="m">{{ message|raw }} </p>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
                <section class="section_bg_img flex column jc-center ai-center">
                    <div class="ta-center white mb-5">
                        <h1 id="main_titre" class="police_italien shadow_contour"><Strong class="font-weight-normal">La Perle Bleue</Strong> </h1>
                        <h2 class="shadow_contour"><Strong>depuis 1998</Strong></h2>
                    </div>
                </section>
                <!-- Fin Section Accueil-->
            
                <!-- Debut Section Reservation-->
                
                <section id="reservation" class="section_reservation">
                    <div class="reservation_div">
                        <div class="reservation_flex">
                            
                            <div class="container_info">
                                <div class="flex wrap white">  
                                    <div class="info f-1">
                                        {% for text in textes %}
                                            {% if text.nom == 'telephone' %}
                                                <h3 class="fs-18"><i class="fas fa-phone-alt mr-1 vert"></i><Strong>{{text.texte}}</Strong></h3>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                    <div class="info f-1">
                                        <h3 class="fs-18"><i class="fas fa-map-marker-alt mr-1 vert"></i><Strong>1 Rue du Hoelzel</Strong></h3>
                                        <p class="gray m-0"><Strong>67400 Illkirch-Graffenstaden</Strong></p>
                                    </div>
                                    <div class="info f-1-5">
                                        <h3 class="fs-18"><i class="far fa-clock mr-1 vert "></i>Ouvert du Mardi - Dimanche</h3>
                                        <p class="gray">Nos Horaires <a href="#" onclick="confirmDelete()">ici</a></p>
                                    </div>
                                </div>
                            </div>
                            <div class="container_reservation_form">
                                <h3 class="white"><Strong>Réserver une Table</Strong></h3>
                                {{ form_start(formReservation, {'action': path('Email'), 'attr' : { 'class': 'reservation_form','autocomplete' : 'off'} }) }}
                                        {% for ferme in fermetures %}
                                            <p class="red">Les Réservations sont indisponible du : {{ferme.debut|date("d/m/Y")}} au {{ferme.fin|date("d/m/Y")}}</p>
                                        {% endfor %}
                                    <div class="flex">
                                        <div class="container_input">
                                            {{ form_widget(formReservation.nom)}}
                                        </div>
                                        <div class="container_input ml">
                                            {{ form_widget(formReservation.email)}}
                                    
                                        </div>
                                    </div>
                                    
                                    <div class="flex">
                                        <div class="container_input form-group">
                                            <div class="container_input_icon form-group">
                                                    <div class="datepicker date">
                                                        {{ form_widget(formReservation.date)}}
                                                        <div class="input-group-append icon"><i class="fas fa-calendar-alt white"></i></div>
                                                    </div>
                                            </div>
                                        </div>
                                        <div class="container_input ml">
                                            <div class="container_input_icon">
                                                <div class=" timepicker ">
                                                    {{ form_widget(formReservation.heure)}}
                                                    <div class="icon"><i class="fas fa-clock white"></i></div>
                                                </div>                                            
                                            </div>
                                        </div>

                                        <div class="container_input ml">
                                            {{ form_widget(formReservation.telephone)}}
                                        </div>
                                    </div>
                                    <div class="flex">

                                        <div class="container_input">
                                            <div class="container_input_icon">
                                                {{ form_widget(formReservation.nb_adulte)}}    
                                            </div>
                                        </div>

                                        <div class="container_input ml">
                                            <div class="container_input_icon">
                                                {{ form_widget(formReservation.nb_enfant)}}
                                            </div>
                                        </div>

                                        <div class="container_input ml">
                                            {{ form_widget(formReservation.nb_bebe)}}
                                        </div>
                                    </div>
                                    <div class="flex">
                                        <div class="container_input">
                                            {{ form_widget(formReservation.message)}}
                                        </div>
                                        <div class="container_input ml">
                                            {{ form_widget(formReservation.Valider)}}
                                        </div>
                                    </div>  
                                {{ form_end(formReservation)}}
                            </div>
                        </div>
                    </div>
                </section>
                <!-- Fin Section Reservation-->

                <!-- Debut Section Menu-->
                <section class="section_menu">
                    <div class="container_menu wrapper">
                        <!-- Coté gauche de la boxe Menu avec le texte et le logo-->
                        <div id="left_side_menu">
                            <h2 class="police_italien"><Strong>Notre Menu</Strong></h2>
                            {% for text in textes %}
                                {% if text.nom == 'texteMenu' %}
                                    <p class="text_menu">{{text.texte}}</p>
                                {% endif %}
                            {% endfor %}
                            <a class="button_menu" href="menu">Voir le <Strong>menu</Strong></a>
                        </div>
                        <!-- Coté droit de la boxe Menu avec les images-->
                        <div id="right_side_menu" class="f-1">
                            <!-- Les images du Menu -->
                            {% for img in menu_images %}
                                <div class="p">
                                    <img class="img_menu_gallery" src="{{ asset('img/Upload/' ~  img.image ~ '') }}" alt="Menu perle bleue plat">
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </section>
                <!-- Fin Section Menu-->

                <!-- Debut Section Gallery-->
                <section class="section_gallery">
                    <div class="div_gallery">
                        {% for img in gallery_images %}
                            <div>
                                <img class="img_gallery" src="{{ asset('img/Upload/' ~  img.image ~ '') }}" alt="gallery perle bleue restaurant">
                            </div>
                        {% endfor %}
                    </div>
                </section>
                <!-- Fin Section Gallery-->

                <!-- Debut Section munti menu-->
                <section class="section_multi_menu">
                        <div class="choix_multi_menu">
                            <h2 class="white police_italien shadow_contour ta-center"><Strong>Nos Suggestions</Strong></h2>
                    </div>
                    <div class="container_menu wrapper">
                            <div class="products_container visible">
                                {% for menu in menus %}                               
                                    <div class="div_product">
                                        <img class="img_product" src="{{ asset('img/Upload/' ~  menu.image ~ '') }}" alt="{{menu.nom}}">
                                        <h3><Strong>{{menu.nom}}</Strong></h3>
                                        <p class="product_descrip">{{menu.description}}</p>
                                        <p class="prix">{{menu.prix}} €</p>
                                    </div>                         
                                {% endfor %}
                            </div>
                        </div>
                </section>
                <!-- Fin Section munti menu-->

                <div id="modal">
                    <div id="modal-actions">
                        <h2>Nos <Strong>Horaires d'ouverture</Strong></h2>
                        <a id="modal-actions__cancel" class="close_horaire" href="#reservation"></a>
                    </div>
                    <table class="horaire_table" cellspacing="0" cellpadding="0">
                        <tr>
                            <th>Lundi</th>
                            <td>Fermé</td>
                        </tr>
                        <tr>
                            <th>Mardi</th>
                            <td>11h30 - 14h30 <br> 18h00 - 22h00</td>
                        </tr>
                        <tr>
                            <th>Mercredi</th>
                            <td>11h30 - 14h30 <br> 18h00 - 22h00</td>
                        </tr>
                        <tr>
                            <th>Jeudi</th>
                            <td>11h30 - 14h30 <br> 18h00 - 22h00</td>
                        </tr>
                        <tr>
                            <th>Vendredi</th>
                            <td>11h30 - 14h30 <br> 18h00 - 23h00</td>
                        </tr>
                        <tr>
                            <th>Samedi</th>
                            <td>10h30 - 23h30</td>
                        </tr>
                        <tr>
                            <th>Dimanche</th>
                            <td>10h30 - 22h30</td>
                        </tr>
                    </table>
                </div>

        </main>

    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
        
        <!-- JavaScript Bundle with Popper -->
        <script src="{{ asset('js/bootstrap-datepicker.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>

        <!-- Include Moment.js CDN -->
        <script src="{{ asset('js/onglets.js') }}"></script>
        <script src="{{ asset('js/tableau-horaires.js') }}"></script>
        <script src="{{ asset('js/script.js') }}"></script>

        
    {% endblock %}
{% endblock %}

