{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}    
 
    <!-- Include Bootstrap CDN -->
    <link rel="stylesheet" href="{{ asset('css/timepicker.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" integrity="sha512-mSYUmp1HYZDFaVKK//63EcZq4iFWFjxSL+Z3T/aCt4IO9Cejm03q3NKKYN6pFQzY0SBOr8h+eCIAZHPXcpZaNw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    
    <link rel="stylesheet" href="{{ asset('css/accueil.css') }}">
    
{% endblock %}

{% block body %}

        <main>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
                <!-- Début Section Accueil : image et texte-->
                
                <section class="section_bg_img flex column jc-center ai-center">
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger red">
                            <p>{{ message }}</p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                    <div class="ta-center white mb-5">
                        <p class="police_italien shadow_contour">Welcome</p>
                        <h1 id="main_titre" class="shadow_contour">PERLE BLEUE depuis 1998</h1>
                    </div>
                </section>
                <!-- Fin Section Accueil-->
            
                <!-- Debut Section Reservation-->
                
                <section class="section_reservation">
                    <div class="reservation_div">
                        <div class="reservation_flex">
                            
                            <div class="container_info">
                                <div class="flex wrap white">  
                                    <div class="info f-1">
                                        {% for text in textes %}
                                            {% if text.nom == 'telephone' %}
                                                <h4 class="fs-18"><i class="fas fa-phone-alt mr cyan"></i>{{text.texte}}</h4>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                    <div class="info f-1">
                                        <h4 class="fs-18"><i class="fas fa-map-marker-alt mr cyan"></i>1 Rue du Hoelzel</h4>
                                        <p class="gray m-0">67400 Illkirch-Graffenstaden</p>
                                    </div>
                                    <div class="info f-1-5">
                                        <h4 class="fs-18"><i class="far fa-clock mr cyan"></i>Ouvert du Mardi - Dimanche</h4>
                                        <!--- 
                                        <table style="width:100%" cellspacing="0" cellpadding="0">
                                            <tr>
                                            <th>Mardi Jeudi</th>
                                            <td>10h - 14h30 <br> 18h - 22h</td>
                                            </tr>
                                            <tr>
                                            <th>Vendredi</th>
                                            <td>10h - 14h30 <br> 18h - 23h</td>
                                            </tr>
                                            <tr>
                                            <th>Samedi</th>
                                            <td>10h30 - 23h30</td>
                                            </tr>
                                            <tr>
                                                <th>Dimanche</th>
                                                <td>10h30 - 22h30</td>
                                            </tr>
                                        </table>-->
                                    </div>
                                </div>
                            </div>
                            <div class="container_reservation_form">
                                <h3 class="white">Réserver une Table</h3>
                                {{ form_start(formReservation, {'action': path('Email'), 'attr' : { 'class': 'reservation_form','autocomplete' : 'off'} }) }}
                                        {% for ferme in fermetures %}
                                            <p class="red">Les Réservations sont indisponible du : {{ferme.debut|date("d/m/Y")}} au {{ferme.fin|date("d/m/Y")}}</p>
                                        {% endfor %}
                                    <div class="flex">
                                        <div class="container_input">
                                            {{ form_widget(formReservation.nom)}}
                                        </div>
                                        <div class="container_input ml">
                                            {{ form_widget(formReservation.email)}}
                                    
                                        </div>
                                    </div>
                                    
                                    <div class="flex">
                                        <div class="container_input form-group">
                                            <div class="container_input_icon form-group">
                                                    <div class="datepicker date">
                                                        {{ form_widget(formReservation.date)}}
                                                        <div class="input-group-append icon"><i class="fas fa-calendar-alt white"></i></div>
                                                    </div>
                                            </div>
                                        </div>
                                        <div class="container">
                                            <div class="switch">
                                                <div class="toggle-button">
                                                    <div class="toggle"></div>
                                                    <div class="moon-mask"></div>
                                                    <div class="circles-wrapper">
                                                        <div class="circle"></div>
                                                        <div class="circle"></div>
                                                        <div class="circle"></div>
                                                        <div class="circle"></div>
                                                        <div class="circle"></div>
                                                        <div class="circle"></div>
                                                        <div class="circle"></div>
                                                        <div class="circle"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="text">
                                                <p>n</p>
                                                <p>ff</p>
                                            </div>
                                        </div>
                                        <div class="container_input ml">
                                            <div class="container_input_icon">
                                                <div class=" timepicker ">
                                                    {{ form_widget(formReservation.heure)}}
                                                    <div class="icon"><i class="fas fa-clock white"></i></div>
                                                </div>                                            
                                            </div>
                                        </div>

                                        <div class="container_input ml">
                                            {{ form_widget(formReservation.telephone)}}
                                        </div>
                                    </div>
                                    <div class="flex">

                                        <div class="container_input">
                                            <div class="container_input_icon">
                                                <!-- <div class="icon"><i class="fas fa-calendar-day"></i></div> -->
                                                {{ form_widget(formReservation.nb_adulte)}}    
                                            </div>
                                        </div>

                                        <div class="container_input ml">
                                            <div class="container_input_icon">
                                                <!-- <div class="icon"><i class="fas fa-clock"></i></div> -->
                                                {{ form_widget(formReservation.nb_enfant)}}
                                            </div>
                                        </div>

                                        <div class="container_input ml">
                                            {{ form_widget(formReservation.nb_bebe)}}
                                        </div>
                                    </div>
                                    <div class="flex">
                                        <div class="container_input">
                                            {{ form_widget(formReservation.message)}}
                                        </div>
                                        <div class="container_input ml">
                                            {{ form_widget(formReservation.Valider)}}
                                        </div>
                                    </div>  
                                {{ form_end(formReservation)}}
                            </div>
                        </div>
                    </div>
                </section>
                <!-- Fin Section Reservation-->

                <!-- Debut Section Menu-->
                <section class="section_menu">
                    <div class="container_menu wrapper">
                        <!-- Coté gauche de la boxe Menu avec le texte et le logo-->
                        <div id="left_side_menu">
                            <h2 class="police_italien">Notre Menu</h2>
                            {% for text in textes %}
                                {% if text.nom == 'texteMenu' %}
                                    <p class="text_menu">{{text.texte}}</p>
                                {% endif %}
                            {% endfor %}
                            <a class="button_menu" href="menu">Full Menu</a>
                        </div>
                        <!-- Coté droit de la boxe Menu avec les images-->
                        <div id="right_side_menu" class="f-1">
                            <!-- Les images du Menu -->
                            {% for img in menu_images %}
                                <div class="p">
                                    <img class="img_menu_gallery" src="{{ asset('img/Upload/' ~  img.image ~ '') }}" alt="">
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </section>
                <!-- Fin Section Menu-->

                <!-- Debut Section Gallery-->
                <section class="section_gallery">
                    <div class="div_gallery">
                        {% for img in gallery_images %}
                            <div>
                                <img class="img_gallery" src="{{ asset('img/Upload/' ~  img.image ~ '') }}" alt="">
                            </div>
                        {% endfor %}
                    </div>
                </section>
                <!-- Fin Section Gallery-->

                <!-- Debut Section munti menu-->
                <section class="section_multi_menu">
                        <div class="choix_multi_menu">
                            <h2 class="white">Nos Suggestions</h2>
                    </div>
                    <div class="container_menu wrapper">
                            <div class="products_container visible">
                                {% for menu in menus %}                               
                                    <div class="div_product">
                                        <img class="img_product" src="{{ asset('img/Upload/' ~  menu.image ~ '') }}" alt="">
                                        <h3>{{menu.nom}}</h3>
                                        <p class="product_descrip">{{menu.description}}</p>
                                        <p class="prix">{{menu.prix}} €</p>
                                    </div>                         
                                {% endfor %}
                            </div>
                        </div>
                </section>
                <!-- Fin Section munti menu-->

        </main>
        <div class="container">
            <div class="switch">
                <div class="toggle-button">
                    <div class="toggle"></div>
                    <div class="moon-mask"></div>
                    <div class="circles-wrapper">
                        <div class="circle"></div>
                        <div class="circle"></div>
                        <div class="circle"></div>
                        <div class="circle"></div>
                        <div class="circle"></div>
                        <div class="circle"></div>
                        <div class="circle"></div>
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <div class="text">
                <p>n</p>
                <p>ff</p>
            </div>
        </div>

    {% block javascripts %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
        
        <!-- JavaScript Bundle with Popper -->
        <script src="{{ asset('js/bootstrap-datepicker.js') }}"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="{{ asset('js/timepicker.js') }}"></script>

        <!-- Include Moment.js CDN -->
        <script src="{{ asset('js/onglets.js') }}"></script>
        <script src="{{ asset('js/script.js') }}"></script>
        
    {% endblock %}
{% endblock %}

